# Use the official Node.js 16 image
FROM node:16

# Set the USER to root
USER root

# Update package repositories and install logrotate
RUN apt-get update && apt-get install -y logrotate

# Create necessary directories and set permissions
RUN mkdir -p /app /app/log /app/certs \
  && chmod -R 777 /app /app/certs /app/log /app/load-env.sh

# Set the working directory
WORKDIR /app

# Copy package files and install dependencies
COPY package.json package-lock.json .npmrc /app/
RUN npm install --force

# Copy application files
COPY . /app

# Set permissions for log directory
RUN chown -R root:root /app/log && chmod -R 755 /app/log

# Add logrotate configuration file
ADD logrotate.conf /etc/logrotate.conf

# Add logrotate script
ADD logrotate.sh /app/log_rotate.sh

# Set the entry point and command
CMD ["sh", "-c", "logrotate -s /app/logrotate.status /etc/logrotate.conf && tail -f /dev/null"]
